<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shelves">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/listShelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Shelf/Shelves" />

        <Button
            android:id="@+id/addShelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Shelf" />

        <Button
            android:id="@+id/editShelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Shelf" />

        <Button
            android:id="@+id/deleteShelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Shelf" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>